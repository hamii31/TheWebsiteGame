@model TaskFiveViewModel
@{
    ViewData["Title"] = "Task Five";
}

@if (TaskFiveViewModel.TaskCompleted)
{
    <font size="10">
        <p>@TaskFiveViewModel.Message</p>
    </font>
}
else
{
    <h1>@ViewData["Title"]</h1>
    <img src="@TaskFiveViewModel.ImageUrl" />
    <form method="post">
        <div class="form-group">
            <label asp-for="AnswerGiven"><b>Have you seen this person?</b></label>
            <input asp-for="AnswerGiven" class="form-control" placeholder="Answer...">
            <span asp-validation-for="AnswerGiven" class="small text-danger"></span>
        </div>
        <div class="text-center">
            <input class="btn btn-primary" type="submit" value="Submit answer" />
        </div>
    </form>
}


