@model TaskTwoViewModel
@{
    ViewData["Title"] = "Task Two";
    ViewData["Title2"] = "Answer:";
}

@if (TaskTwoViewModel.TaskCompleted)
{
        <h1>@ViewData["Title2"]</h1>
        <font size="10">
            <div>
            @TaskTwoViewModel.Answer
            </div>
        </font>
}
else
{
    <h1>@ViewData["Title"]</h1>
   <form method="post">
         <div class="form-group">
          <label asp-for="AnswerGiven"><b>French oversees department in the Caribbean?</b></label>
          <input asp-for="AnswerGiven" class="form-control" placeholder="Answer...">
          <span asp-validation-for="AnswerGiven" class="small text-danger"></span>      
        </div>
         <div class="text-center">
           <input class="btn btn-primary" type="submit" value="Submit answer" />
        </div>
    </form>
    
}